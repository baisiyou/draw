/**canvas.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.toolbar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.tool-btn {
  background-color: #4a90e2;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
}

.canvas {
  flex: 1;
  width: 100%;
  background-color: #fff;
}

.tools-panel {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
}

.tool-item {
  padding: 20rpx 40rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

.tool-item:active {
  background-color: #e0e0e0;
}

