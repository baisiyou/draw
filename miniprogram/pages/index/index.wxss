/**index.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.lang-switch {
  padding: 12rpx 24rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  cursor: pointer;
}

.lang-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.title-section {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.status-indicator {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  padding: 4rpx 0;
}

.status-dot-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.status-dot {
  width: 24rpx;
  height: 24rpx;
  min-width: 24rpx;
  min-height: 24rpx;
  border-radius: 50%;
  background-color: #999999;
  display: block;
  border: 3rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.status-dot.connected {
  background-color: #52c41a !important;
  border-color: #52c41a !important;
  box-shadow: 0 2rpx 12rpx rgba(82, 196, 26, 0.6) !important;
}

.status-dot.disconnected {
  background-color: #ff4d4f !important;
  border-color: #ff4d4f !important;
  box-shadow: 0 2rpx 12rpx rgba(255, 77, 79, 0.6) !important;
}

.status-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.2;
  font-weight: 500;
}

.status-text.status-connected {
  color: #52c41a;
}

.status-text.status-disconnected {
  color: #ff4d4f;
}

.create-btn {
  background-color: #4a90e2;
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.drawings-list {
  flex: 1;
  padding: 20rpx;
}

.drawing-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.drawing-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.drawing-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.drawing-time {
  font-size: 24rpx;
  color: #999;
}

.drawing-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  background-color: #f0f0f0;
  color: #333;
  border: none;
}

.delete-btn {
  background-color: #ff6b6b;
  color: #fff;
}

.empty {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

